FROM . as base

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY bun.lockb ./

# Install dependencies with cache directory
RUN --mount=type=cache,target=/root/.npm \
    npm install

# Copy source code
COPY . .

# Expose ports for development server and debugging
EXPOSE 8080 9229

# Start development server with hot reload
CMD ["npm", "run", "dev"]