FROM node:18-alpine

WORKDIR /app

# Install development tools
RUN apk add --no-cache \
    git \
    curl \
    && rm -rf /var/cache/apk/*

# Copy package files
COPY package*.json ./
COPY bun.lockb ./

# Install all dependencies (including dev)
RUN npm install

# Copy source code
COPY . .

# Expose ports for development server and debugging
EXPOSE 8080 9229

# Start development server with hot reload
CMD ["npm", "run", "dev"]